<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textViewDate"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignStart="@+id/textViewTitle" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewPlay"
        android:src="@drawable/play"
        android:layout_alignBottom="@+id/imageViewLogo"
        android:layout_toEndOf="@+id/imageViewLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/play_now"
        android:id="@+id/textViewPlay"
        android:layout_alignTop="@+id/imageViewPlay"
        android:layout_alignEnd="@+id/textViewTitle" />

</RelativeLayout>